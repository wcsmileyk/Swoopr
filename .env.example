# Django Configuration
# Generate a new secret key with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts (add your domain in production)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=swoopr_dev
DB_USER=swoopr_user
DB_PASSWORD=your-database-password-here
DB_HOST=localhost
DB_PORT=5432

# Security Settings (set to True in production with HTTPS)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False

# File Upload Settings (sizes in bytes)
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880
DATA_UPLOAD_MAX_MEMORY_SIZE=5242880

# Production Environment Example:
# SECRET_KEY=your-production-secret-key
# DEBUG=False
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# CSRF_COOKIE_SECURE=True
# SESSION_COOKIE_SECURE=True